/* pages/toStayIn/toStayIn.wxss */
.container {
    background-color: #FBFBFB;
}

.container .unlocking {
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.container .unlocking .lock-btn {
    width: 324rpx;
    height: 324rpx;
    line-height: 324rpx;
    border-radius: 50%;
    overflow: hidden;
    text-align: center;
    font-size: 36rpx;
    color: #fff;
    background-color: #26B7BC;
    margin-top: 188rpx;
}

.container .unlocking .unable-lock {
    font-size: 28rpx;
    color: #A3A3A3;
    margin-top: 56rpx;
    margin-bottom: 110rpx;
}

.container .unlocking .unable-lock .once-password {
    display: inline-block;
    margin: 0 14rpx;
    color: #26B7BC;
}

.container .stay-list {
    padding: 0 30rpx;
}

.container .stay-list .stay-item {
    height: 150rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #999999;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.container .stay-list .stay-item .item-icon {
    width: 62rpx;
    height: 62rpx;
    margin-left: 36rpx;
    margin-right: 28rpx;
}

.container .stay-list .stay-item .item-icon .content {
    padding-top: 40rpx;
    flex: 1;
    text-align: left;
}

.container .stay-list .stay-item .content .title {
    font-size: 34rpx;
    color: #333333;
    margin-bottom: 13rpx;
}

.container .stay-list .stay-item .content .body {
    font-size: 26rpx;
    color: #727272;
}