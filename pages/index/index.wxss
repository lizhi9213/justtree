/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.top-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9;
  height: 600rpx;
  background: url('https://img.zelkova.cn/juoss/kP8k35aTtK.png') top center no-repeat;
  background-size: 100%;
}

.container.has-list {
  padding-top: 260rpx;
  background-color: #F1F1F5;
}

.container .stay-list {
  min-height: 800rpx;
  padding: 0 20rpx;
  position: relative;
  z-index: 11;
}

.container .stay-list .stay-item {
  background-color: #ffffff;
  border-radius: 0.42em;
  padding: 30rpx 36rpx;
  margin-bottom: 28rpx;
}

.container .stay-list .stay-item .item-top-list {
  position: relative;
  font-size: 28rpx;
  padding-left: 54rpx;
  padding-right: 128rpx;
  margin-bottom: 30rpx;
  font-weight: 600;
}

.container .stay-list .stay-item .item-top-list .item-icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.container .stay-list .stay-item .item-top-list .item-num {
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #343434;
  padding-top: 5rpx;
}

.container .stay-list .stay-item .item-top-list .item-status {
  position: absolute;
  top: 5rpx;
  right: 0;
  color: #26B7BC;
}

.container .stay-list .stay-item .item-time-limit {
  width: 100%;
  font-size: 26rpx;
  color: #26B7BC;
  margin-bottom: 8rpx;
}

.container .stay-list .stay-item .item-adress {
  font-size: 25rpx;
  line-height: 46rpx;
  color: #343434;
}

.container .stay-list .stay-item .stay-item-handle {
  margin-top: 20rpx;
  border-top: 1px solid #E0E0E0;
  overflow: hidden;
}

.container .stay-list .stay-item .stay-item-handle .to-sty-in {
  padding-top: 82rpx;
}

.container .stay-list .stay-item .stay-item-handle .has-been-in {
  padding-top: 33rpx;
}


.container .stay-list .stay-item .stay-item-handle .to-sty-in .stay-button {
  width: 396rpx;
  height: 92rpx;
  border-radius: 2em;
  margin: 0 auto;
  color: #26B7BC;
  line-height: 92rpx;
  text-align: center;
  font-size: 36rpx;
}

.container .stay-list .stay-item .stay-item-handle .stay-button.primary {
  background-color: #26B7BC;
  color: #fff;
  margin-bottom: 8rpx;
}

.container .stay-list .stay-item .stay-item-handle .has-been-in .unlocking-btn {
  width: 212rpx;
  height: 212rpx;
  margin: 0 auto;
  border-radius: 50%;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #26B7BC;
  font-size: 36rpx;
}

.container .stay-list .stay-item .stay-item-handle .handle-tips {
  display: block;
  padding-top: 38rpx;
  width: 100%;
  text-align: center;
  color: #8D8D8D;
  font-size: 26rpx;
  line-height: 38rpx;
}

.container .stay-list .stay-item .stay-item-handle .has-been-in .handle-tips {
  padding-top: 30rpx;
}

.container .stay-list .stay-item .stay-item-handle .handle-tips .disposable {
  display: inline-block;
  margin: 0 16rpx;
  color: #26b7bc;
}

.container .no-list {
  display: flex;
  flex-flow: column;
  align-items: center;
  padding-top: 208rpx;
}

.container .no-list .no-list-icon {
  width: 330rpx;
  height: 222rpx;
  margin-bottom: 100rpx;
}

.container .no-list .no-list-tips {
  flex: 1;
  font-size: 36rpx;
  color: #A3A3A3;
  margin-bottom: 14rpx;
}