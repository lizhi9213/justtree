.container .progress-box {
    box-sizing: border-box;
    width: 100%;
    height: 198rpx;
    background-color: #fff;
    padding: 48rpx 40rpx 40rpx 40rpx;
    display: flex;
    flex-direction: row;
}

.container .progress-box .step {
    height: 100%;
    flex: 1;
    position: relative;
}

.container .progress-box .step::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 5rpx;
    top: 24rpx;
    left: 0;
    background-color: #999999;
    z-index: 16;
}

.container .progress-box .step .point {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    background-color: #D1D1D1;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
    z-index: 14;
}

.container .progress-box .step .point::before {
    content: "";
    width: 25rpx;
    height: 25rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border-radius: 50%;
    background-color: #999999;
}

.container .progress-box .step .text {
    margin-top: 28rpx;
    text-align: center;
    font-size: 34rpx;
    color: #8D8D8D;
}

.container .progress-box .step.active::before,
.container .progress-box .step.active .point::before {
    background-color: #26B7BC;
}

.container .progress-box .step.active .point {
    background-color: #A8E2E4;
}

.container .progress-box .step.active .text {
    color: #26B7BC;
}

.container .certification {
    background-color: #EFEFF4;
}

.container .certification .content {
    background-color: #fff;
    margin-top: 20rpx;
    padding: 0 30rpx;
}

.container .certification .content .input-item {
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    border-bottom: 1px solid #999999;
    height: 112rpx;
    position: relative;
    overflow: hidden;
}

.container .certification .content .input-item .clean {
    position: absolute;
    top: 8rpx;
    right: 6rpx;
    padding: 20rpx;
    z-index: 14;
}

.container .certification .content .input-item .clean .icon {
    width: 24rpx;
    height: 24rpx;
}

.container .certification .content .input-item .label {
    width: 194rpx;
    font-size: 34rpx;
    line-height: 112rpx;
    color: #343434;
    text-indent: 14rpx;
}

.container .certification .content .input-item .item-input {
    flex: 1;
    height: 112rpx;
    font-size: 34rpx;
    line-height: 112rpx;
}

.container .certification .content .stay-tips {
    color: #A8A8A8;
    margin-top: 66rpx;
}

.container .certification .content .stay-tips .title {
    font-size: 36rpx;
    margin-bottom: 36rpx;
}

.container .certification .content .stay-tips .body {
    font-size: 26rpx;
    line-height: 36rpx;
}

.container .certification .content.step2 {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 60rpx;
}

.container .certification .content.step2 .sample-img {
    width: 438rpx;
    height: 438rpx;
    border-radius: 50%;
    overflow: hidden;
}

.container .certification .content.step2 .tips {
