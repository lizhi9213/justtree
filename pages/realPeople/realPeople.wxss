    text-align: center;
    font-size: 32rpx;
    color: #343434;
    line-height: 42rpx;
}

.container .certi-result {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.container .certi-result .icons {
    width: 174rpx;
    height: 174rpx;
    margin-top: 222rpx;
    margin-bottom: 40rpx;
}

.buttom-btn {
    box-sizing: border-box;
    position: fixed;
    left: 0;
    width: 100vw;
    padding: 0 30rpx;
    bottom: 130rpx;
}

.buttom-btn .next-btn {
    box-sizing: border-box;
    width: 100%;
    height: 90rpx;
    border-radius: 2em;
    background-color: #26B7BC;
    color: #fff;
    margin-top: 308rpx;
    font-size: 36rpx;
    text-align: center;
    line-height: 90rpx;
    overflow: hidden;
}

.buttom-btn .next-btn.failed-btn {
    display: flex;
}

.buttom-btn .next-btn.failed-btn .child-btn {
    flex: 1;
    box-sizing: border-box;
}

.buttom-btn .next-btn.failed-btn .child-btn:nth-of-type(1) {
    border-right: 1px solid #ffffff;
}