/* component/topBar.wxss */

.top-bar {
  width: 100%;
  height: 148rpx;
  box-sizing: border-box;
  padding-top: 60rpx;
  padding-bottom: 12rpx;
  position: relative;
  overflow: hidden;
}

.top-bar .top-bar-back {
  position: absolute;
  padding: 16rpx;
  z-index: 13;
  font-size: 32rpx;
  color: #fff;
  padding-top: 18rpx;
}

.top-bar .top-bar-back .icon {
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
  position: relative;
  top: 8rpx;
}

.top-bar .top-bar-title {
  text-align: center;
  color: #fff;
  font-size: 34rpx;
  line-height: 80rpx;
}
